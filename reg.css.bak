/*----Reg form-----*/
*{
	margin:0;
	padding:0;
}
.container{
	width:100%;
	height:100vh;
	font-family:sans-serif;
	background:rgb(187,187,245);
	color:#fff;
	display:flex;
	align-items:center;
	justify-content:center;
}
.card{
	width:350px;
	height:500px;
	box-shadow:0 0 40px 20px rgba(0,0,0,0.26);
}
.innter-box{
	position:relative;
	width:100%;
	height:100%;
}
.card-front,.card-back {
    position: absolute;
    width: 100%;
    height: 100%;
    background-position: center;
    background-size: cover;
    padding: 55px;
    box-sizing: border-box;
	background-visibility:hidden;
}
.card-back{
	transform:rotateY(180deg);
}
.card h2{
	font-weight:normal;
	font-size:24px;
	text-align:center;
	margin-bottom:20px;
}
.input-box{
	width:100%;
	background:transparent;
	border:1px solid #fff;
	margin:6px 0;
	height:32px;
	border-radius:20px;
	padding:0 10px;
	box-sizing:border-box;
	outline:none;
	text-align:center;
	color:#fff;
}